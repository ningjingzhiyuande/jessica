        <script type="text/javascript">

          
            <%hot_news = @hot_news.map{|article|[article.title,article.id]}%>
            <%news = @news.map{|article|[article.title,article.id]}%>
            <%notices = @notices.map{|article|[article.title,article.id]}%>
            var hot_news=<%= hot_news.to_s.html_safe%>
            var news=<%= news.to_s.html_safe%>
            var notices=<%= notices.to_s.html_safe%>

           function pageselectCallback(page_index, jq){
                // Get number of elements per pagionation page from form
                var items_per_page = $(jq).attr("data-num")
                var newcontent = '';
                var data_id = $(jq).attr("data-id")
                if(data_id=="hot_news"){
                	 var max_elem = Math.min((page_index+1) * items_per_page, hot_news.length);
                }
                if(data_id=="news"){
                	var max_elem = Math.min((page_index+1) * items_per_page, news.length);         
                }
                if(data_id=="notice"){
                	var max_elem = Math.min((page_index+1) * items_per_page, notices.length);  
                }          

               
          
                
                // Iterate through a selection of the content and build an HTML string
                for(var i=page_index*items_per_page;i<max_elem;i++)
                {
                	if(data_id=="hot_news"){
                		 newcontent += '<li><a class="artile_show" data-id='+ hot_news[i][1]+'>' + hot_news[i][0].substr(0,20) + '</a></li>';
                	}
                	if(data_id=="news"){
                		 newcontent += '<li><a class="artile_show"  data-id='+ news[i][1]+'>' + news[i][0].substr(0,20) + '</a></li>';

                	}
                	if(data_id=="notice"){
                		 newcontent += '<li><a  class="artile_show" data-id='+ notices[i][1]+'>'+ notices[i][0].substr(0,20) + '</a></li>';

                	}          
                  
                }

                // Replace old content with new content
                $("#"+data_id).html(newcontent);

                // Prevent click eventpropagation
                return false;
            }

             
              $(document).ready(function(){

                $("#hot_new1").pagination(hot_news.length,{callback: pageselectCallback,items_per_page: 6,prev_text: "往前看看",next_text: "继续查看"})
                $("#new1").pagination(news.length,{callback: pageselectCallback,items_per_page: 8,prev_text: "往前看看",next_text: "继续查看"})
                $("#notice1").pagination(notices.length,{callback: pageselectCallback,items_per_page: 6,prev_text: "往前看看",next_text: "继续查看"});

                $(".artile_show").click(function(){
