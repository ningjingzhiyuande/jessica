
<%= form_for([:admin,@article],:html=>{class: "new_article"}) do |f| %>
  
<ul>

	<li> 
		<span class="width_align_right">文章标题</span> 
       <span class="width_content">
       	<%=f.text_field :title,class: "field text medium"%>   
        <em class="styled-select slate"><%=f.select :kind,Article.kinds.map{|k,v|[I18n.t(k),k]}%><em></span>
    </li>

   

     <li> 
		<span class="width_align_right">文章内容 </span>
		<span class="width_content"><%= f.kindeditor :content,height: 600 %></span>    
    </li>
   
    <li><span class="width_align_right">  <p></p> </span>
    	<span class="width_content">
    <%= f.submit '提交',:class=>"submit_button"%></span>
  </div></li>
    
</ul>
  
<% end %>

	
<script>
$(function() {

    $(".new_article").validate({
    	//errorElement: "b",    	
        rules: {
       	 "article[title]": "required",
         content: {required: true}
        },
       messages:{   
        content: { required: "请输入商品详细信息！"}
       
    }

})

})
</script>




