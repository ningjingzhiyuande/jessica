
<%= form_for([:admin,@service],:html=>{class: "new_article"}) do |f| %>
  
<ul>

	<li> 
		<span class="width_align_right">服务名称</span> 
       <span class="width_content">
       	<%=f.text_field :title,class: "field text medium"%>    <b class="follow_msg">最好四五个字</b>
       </span>
    </li> 
    <li> 
		<span class="width_align_right">服务英文</span> 
       <span class="width_content">
        	<%=f.text_field :en_title,class: "field text medium"%>   <b class="follow_msg">最好两个英语单词 </b>
       </span>
    </li> 
   <li> 
		<span class="width_align_right">服务简介 </span>
		<span class="width_content"><%= f.text_area :info ,class: "text_area",cols: 83,rows: 4%></span>    
    </li>
     <li> 
		<span class="width_align_right">服务内容 </span>
		<span class="width_content"><%= f.kindeditor :content,height: 600 %></span>    
    </li>
   
    <li><span class="width_align_right">  <p></p> </span>
    	<span class="width_content">
    <%= f.submit '提交',:class=>"submit_button"%></span>
  </div></li>
    
</ul>
  
<% end %>

	
<script>
$(function() {

    $(".new_article").validate({
    	//errorElement: "b",    	
        rules: {
       	 "article[title]": "required",
         content: {required: true}
        },
       messages:{   
        content: { required: "请输入商品详细信息！"}
       
    }

})

})
</script>




